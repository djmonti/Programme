PROGRAM Zyklus

  INTEGER :: n
  REAL    :: mittelwert = 0, zahl, summe = 0 , mini, maxi
  
  DO
    WRITE(*,*) 'Bitte geben Sie die Anzahl der einzugebenden Zahlen ein.'
    READ(*,*) n
    IF (n > 0) EXIT
  END DO
  
  DO i = 1, n
    
    WRITE(*,*) 'Bitte geben Sie die', i, '-te Zahl ein.'
    READ(*,*) zahl
    IF (i == 1) THEN
      mini = zahl
      maxi = zahl
    END IF
    
    IF (zahl > maxi) maxi = zahl
    IF (zahl < mini) mini = zahl
    
    summe      = summe + zahl
    mittelwert = summe / i
  END DO
  
  WRITE(*,*) 'Das Maximum betr채gt:   ', maxi
  WRITE(*,*) 'Das Minimum betr채gt:   ', mini
  WRITE(*,*) 'Die Summe betr채gt:     ', summe
  WRITE(*,*) 'Der Mittelwert betr채gt:', mittelwert  
END PROGRAM
